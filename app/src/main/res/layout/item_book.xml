<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_address_selected"
    android:padding="16dp">

    <TextView
        android:id="@+id/title_bold"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_bold"
        app:layout_constraintStart_toEndOf="@+id/title_bold"
        app:layout_constraintTop_toTopOf="@+id/title_bold"
        tools:text="Titulo" />

    <TextView
        android:id="@+id/author_bold"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/author_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bold" />

    <TextView
        android:id="@+id/text_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/author_bold"
        app:layout_constraintStart_toEndOf="@+id/author_bold"
        app:layout_constraintTop_toTopOf="@+id/author_bold"
        tools:text="Autor" />

    <TextView
        android:id="@+id/publisher_bold"
        style="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/publisher_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/author_bold" />

    <TextView
        android:id="@+id/text_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/publisher_bold"
        app:layout_constraintStart_toEndOf="@+id/publisher_bold"
        app:layout_constraintTop_toTopOf="@+id/publisher_bold"
        tools:text="Publisher" />

</androidx.constraintlayout.widget.ConstraintLayout>